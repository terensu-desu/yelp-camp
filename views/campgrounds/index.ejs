<% include ../partials/top %>

<h1>Browse Campgrounds</h1>
<div class="row">
	<% campgrounds.forEach(function(campground) { %>
	<div class="col-sm-12 col-md-6 col-lg-4">
		<div class="card">
			<img class="card-img-top img-fluid" alt="Campground preview" src="<%= campground.image %>" />
			<div class="card-body">
				<h3><%= campground.name %></h3>
				<p class="card-text"><%= campground.description.substring(0, 100) %></p>
			</div>
			<div class="card-footer">
				<a href="/campgrounds/<%= campground._id %>">View campground</a>
			</div>
		</div>
	</div>
	<% }); %>
</div>
	

<% include ../partials/bottom %>