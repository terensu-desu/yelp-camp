<% include ../partials/top %>

<div class="row">
	<div class="col-sm-12">
		<h2 class="text-center">Edit <%= campground.name %></h2>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="nameForm">Campground Name:</label>
				<input id="nameForm" class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
			</div>
			<div class="form-group">
				<label for="imageForm">Campground Image URL:</label>
				<input id="imageForm" class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
			</div>
			<div class="form-group">
				<label for="descriptionForm">Description:</label>
				<input id="descriptionForm" class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
			</div>
			<button class="btn btn-primary" type="submit">Submit!</button>
		</form>
	</div>
</div>

<% include ../partials/bottom %>