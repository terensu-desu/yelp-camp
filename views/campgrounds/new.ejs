<% include ../partials/top %>

<div class="row">
	<div class="col-sm-12">
		<h2 class="text-center">Add a Campground</h2>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="nameForm">Campground Name:</label>
				<input id="nameForm" class="form-control" type="text" placeholder="Campground name" name="name">
			</div>
			<div class="form-group">
				<label for="imageForm">Campground Image URL:</label>
				<input id="imageForm" class="form-control" type="text" placeholder="Campground image URL" name="image">
			</div>
			<div class="form-group">
				<label for="descriptionForm">Description:</label>
				<input id="descriptionForm" class="form-control" type="text" placeholder="Campground description" name="description">
			</div>
			<button class="btn btn-primary" type="submit">Submit!</button>
		</form>
	</div>
</div>

<% include ../partials/bottom %>